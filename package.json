{
  "name": "opengwmail",
  "productName": "openGWMail",
  "humanName": "openGWMail",
  "description": "The missing desktop client for Gmail and Google Inbox",
  "version": "1.1.4",
  "prerelease": false,
  "scripts": {
    "rebuild:electron": "node tools/rebuildElectron.js",
    "prestart": "webpack",
    "start": "electron bin/app/index.js",
    "test": "standard",
    "package:darwin": "node tools/packager --platform=darwin",
    "package:linux": "node tools/packager --platform=linux",
    "package:win32": "node tools/packager --platform=win32",
    "package": "node tools/packager --distribution",
    "package:darwin:distrib": "node tools/packager --platform=darwin --distribution",
    "package:linux:distrib": "node tools/packager --platform=linux --distribution",
    "package:win32:distrib": "node tools/packager --platform=win32 --distribution",
    "package:finalise": "node tools/packager --finalise",
    "package:darwin:finalise": "node tools/packager --platform=darwin --finalise",
    "package:linux:finalise": "node tools/packager --platform=linux --finalise",
    "package:win32:finalise": "node tools/packager --platform=win32 --finalise",
    "install-app": "node tools/installApp.js && node tools/rebuildElectron.js",
    "outdated-app": "node tools/outdatedApp.js",
    "dev:platform": "webpack --task=platform && electron bin/app/index.js",
    "dev:app": "webpack --task=app && electron bin/app/index.js",
    "dev:mailboxes": "webpack --task=mailboxes && electron bin/app/index.js",
    "dev:assets": "webpack --task=assets && electron bin/app/index.js",
    "dev:run": "electron bin/app/index.js",
    "clean": "rimraf \"node_modules/!(rimraf|.bin)\"",
    "clean-all": "node tools/clean.js"
  },
  "keywords": [],
  "author": "OpenGWMail Community (https://github.com/Dodenis/)",
  "homepage": "https://github.com/Dodenis/openGWMail",
  "license": "MPL-2.0",
  "repository": "https://github.com/Dodenis/openGWMail",
  "main": "bin/app/index.js",
  "optionalDependencies": {
    "appdmg": "0.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "6.23.1",
    "babel-loader": "6.3.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-0": "6.22.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "child_process": "^1.0.2",
    "clean-webpack-plugin": "0.1.15",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.26.1",
    "electron": "^4.0.6",
    "electron-installer-debian": "^1.1.0",
    "electron-installer-windows": "^1.1.0",
    "electron-packager": "^13.1.0",
    "electron-rebuild": "^1.8.4",
    "extract-text-webpack-plugin": "1.0.1",
    "extract-zip": "=1.6.7",
    "file-loader": "0.10.0",
    "graceful-fs": "4.1.11",
    "json-loader": "0.5.4",
    "jsx-loader": "0.13.2",
    "less": "2.7.2",
    "less-loader": "2.2.3",
    "nlf": "1.4.2",
    "recursive-readdir": "2.1.0",
    "standard": "8.6.0",
    "style-loader": "0.13.1",
    "temp": "0.8.3",
    "uglify-js": "3.4.9",
    "url-loader": "1.1.2",
    "uuid": "3.0.1",
    "webpack": "1.14.0",
    "webpack-target-electron-renderer": "0.4.0",
    "yargs": "6.6.0"
  },
  "standard": {
    "ignore": [
      "src/app/lib/"
    ]
  }
}
